<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <!-- RadioGroup 保证里面的Radio只能单选,它也继承LinearLayout -->
    <RadioGroup
        android:background="#ccffffff"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RadioButton1"
            android:onClick="goHome"
            style="@style/MyRadButton"
            android:drawableTop="@drawable/btn_home_selector"
            android:text="首页" />

        <RadioButton
            style="@style/MyRadButton"
            android:drawableTop="@drawable/btn_bank_selector"
            android:text="银行" />
        <RadioButton
            style="@style/MyRadButton"
            android:drawableTop="@drawable/btn_news_selector"
            android:text="新闻" />
        <RadioButton
            style="@style/MyRadButton"
            android:drawableTop="@drawable/btn_my_selector"
            android:text="我的" />


    </RadioGroup>


</RelativeLayout>
